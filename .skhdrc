# Move spaces
cmd + alt - 1 : yabai -m window --space 1
cmd + alt - 2 : yabai -m window --space 2
cmd + alt - 3 : yabai -m window --space 3
cmd + alt - 4 : yabai -m window --space 4
cmd + alt - 5 : yabai -m window --space 5
cmd + alt - 6 : yabai -m window --space 6
cmd + alt - 7 : yabai -m window --space 7
cmd + alt - 8 : yabai -m window --space 8
cmd + alt + shift - 1 : yabai -m window --space 9
cmd + alt + shift - 2 : yabai -m window --space 10
cmd + alt + shift - 3 : yabai -m window --space 11
cmd + alt + shift - 4 : yabai -m window --space 12
cmd + alt + shift - 5 : yabai -m window --space 13
cmd + alt + shift - 6 : yabai -m window --space 14
cmd + alt + shift - 7 : yabai -m window --space 15
cmd + alt + shift - 8 : yabai -m window --space 16

# Tiling
cmd - space : yabai -m window --toggle float
cmd + shift - space : yabai -m window --toggle zoom-fullscreen

cmd - up    : yabai -m window --focus north
cmd - right : yabai -m window --focus east
cmd - down  : yabai -m window --focus south
cmd - left  : yabai -m window --focus west

cmd + shift - up : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
cmd + shift - right : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)
cmd + shift - down : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
cmd + shift - left : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)

cmd + ctrl - right : [[ $(yabai -m query --windows --window | jq .frame.x) == "8" ]] && yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0
cmd + ctrl - left : [[ $(yabai -m query --windows --window | jq .frame.x) == "8" ]] && yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0

ctrl + alt + cmd - m : [[ $(yabai -m config focus_follows_mouse) = "disabled" ]] && yabai -m config focus_follows_mouse autofocus || yabai -m config focus_follows_mouse off
ctrl + alt + cmd - l : [[ $(yabai -m config layout) = "float" ]] && yabai -m config layout bsp || yabai -m config layout float
ctrl + alt + cmd - r : brew services restart yabai && brew services restart skhd
