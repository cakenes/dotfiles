# Programs
ctrl + cmd - return : open -na /Applications/Alacritty.app/
ctrl + cmd - w : open -na '/Applications/Brave Browser.app/'
ctrl + cmd - e : open ~/
ctrl - q : kill $(yabai -m query --windows --window | jq .pid)

# Focus spaces
ctrl - 1 : yabai -m space --focus $(yabai -m query --displays --display | jq -r '.spaces[0]')
ctrl - 2 : yabai -m space --focus $(yabai -m query --displays --display | jq -r '.spaces[1]')
ctrl - 3 : yabai -m space --focus $(yabai -m query --displays --display | jq -r '.spaces[2]')
ctrl - 4 : yabai -m space --focus $(yabai -m query --displays --display | jq -r '.spaces[3]')
ctrl - 5 : yabai -m space --focus $(yabai -m query --displays --display | jq -r '.spaces[4]')
ctrl - 6 : yabai -m space --focus $(yabai -m query --displays --display | jq -r '.spaces[5]')
ctrl - 7 : yabai -m space --focus $(yabai -m query --displays --display | jq -r '.spaces[6]')
ctrl - 8 : yabai -m space --focus $(yabai -m query --displays --display | jq -r '.spaces[7]')

# Move spaces
ctrl + cmd - 1 : yabai -m window --space $(yabai -m query --displays --display | jq -r '.spaces[0]')
ctrl + cmd - 2 : yabai -m window --space $(yabai -m query --displays --display | jq -r '.spaces[1]')
ctrl + cmd - 3 : yabai -m window --space $(yabai -m query --displays --display | jq -r '.spaces[2]')
ctrl + cmd - 4 : yabai -m window --space $(yabai -m query --displays --display | jq -r '.spaces[3]')
ctrl + cmd - 5 : yabai -m window --space $(yabai -m query --displays --display | jq -r '.spaces[4]')
ctrl + cmd - 6 : yabai -m window --space $(yabai -m query --displays --display | jq -r '.spaces[5]')
ctrl + cmd - 7 : yabai -m window --space $(yabai -m query --displays --display | jq -r '.spaces[6]')
ctrl + cmd - 8 : yabai -m window --space $(yabai -m query --displays --display | jq -r '.spaces[7]')

# Tiling
ctrl - space : yabai -m window --toggle float
ctrl + shift - s : yabai -m window --toggle split
ctrl + shift - space : yabai -m window --toggle zoom-fullscreen

ctrl - up    : yabai -m window --focus north
ctrl - right : yabai -m window --focus east
ctrl - down  : yabai -m window --focus south
ctrl - left  : yabai -m window --focus west

ctrl + shift - up : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
ctrl + shift - right : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)
ctrl + shift - down : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
ctrl + shift - left : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)

# cmd + ctrl - up : [[ $(yabai -m query --windows --window | jq .frame.y) -gt "52" ]] && yabai -m window --resize down:-100:0 || yabai -m window --resize up:100:0
cmd + ctrl - right : [[ $(yabai -m query --windows --window | jq .frame.x) == "8" ]] && yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0
# cmd + ctrl - down : [[ $(yabai -m query --windows --window | jq .frame.y) -gt "52" ]] && yabai -m window --resize down:100:0 || yabai -m window --resize up:-100:0
cmd + ctrl - left : [[ $(yabai -m query --windows --window | jq .frame.x) == "8" ]] && yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0

ctrl + alt + cmd - m : [[ $(yabai -m config focus_follows_mouse) = "disabled" ]] && yabai -m config focus_follows_mouse autofocus || yabai -m config focus_follows_mouse off
ctrl + alt + cmd - l : [[ $(yabai -m config layout) = "float" ]] && yabai -m config layout bsp || yabai -m config layout float
ctrl + alt + cmd - r : brew services restart yabai && brew services restart skhd
