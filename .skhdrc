# Programs
ctrl + cmd - return : open -na /Applications/Alacritty.app/
ctrl + cmd - w : open -na '/Applications/Brave Browser.app/'
ctrl + cmd - e : open ~/
ctrl - q : kill $(yabai -m query --windows --window | jq .pid)

# Focus spaces - mission control
ctrl - 1: [[ $(yabai -m query --displays --display | jq -r '.spaces[0]') -gt "8" ]] && skhd -k "ctrl + alt + cmd - 1" || skhd -k "ctrl + shift + alt - 1"
ctrl - 2: [[ $(yabai -m query --displays --display | jq -r '.spaces[1]') -gt "8" ]] && skhd -k "ctrl + alt + cmd - 2" || skhd -k "ctrl + shift + alt - 2"
ctrl - 3: [[ $(yabai -m query --displays --display | jq -r '.spaces[2]') -gt "8" ]] && skhd -k "ctrl + alt + cmd - 3" || skhd -k "ctrl + shift + alt - 3"
ctrl - 4: [[ $(yabai -m query --displays --display | jq -r '.spaces[3]') -gt "8" ]] && skhd -k "ctrl + alt + cmd - 4" || skhd -k "ctrl + shift + alt - 4"
ctrl - 5: [[ $(yabai -m query --displays --display | jq -r '.spaces[4]') -gt "8" ]] && skhd -k "ctrl + alt + cmd - 5" || skhd -k "ctrl + shift + alt - 5"
ctrl - 6: [[ $(yabai -m query --displays --display | jq -r '.spaces[5]') -gt "8" ]] && skhd -k "ctrl + alt + cmd - 6" || skhd -k "ctrl + shift + alt - 6"
ctrl - 7: [[ $(yabai -m query --displays --display | jq -r '.spaces[6]') -gt "8" ]] && skhd -k "ctrl + alt + cmd - 7" || skhd -k "ctrl + shift + alt - 7"
ctrl - 8: [[ $(yabai -m query --displays --display | jq -r '.spaces[7]') -gt "8" ]] && skhd -k "ctrl + alt + cmd - 8" || skhd -k "ctrl + shift + alt - 8"

