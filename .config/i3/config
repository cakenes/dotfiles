# custom macros
bindsym $mod+l			exec --no-startup-id ~/.macro/screen-lock.sh
bindsym F1			exec --no-startup-id ~/.macro/poe-logout.sh
bindsym F5			exec --no-startup-id ~/.macro/poe-hideout.sh
bindcode 66			exec --no-startup-id ~/.macro/poe-flask.sh
