# keybinds
# KP_0 KP_1 ... KP_9 KP_Add KP_Subtract KP_Multiply KP_Divide KP_Enter KP_Separator

set $mod Mod4
font pango:mononoki Nerd Font 8
floating_modifier $mod

# start program
bindsym $mod+r		        exec --no-startup-id pcmanfm
bindsym $mod+e			exec --no-startup-id st -e ranger
bindsym $mod+w                  exec --no-startup-id firefox
bindsym $mod+Return             exec --no-startup-id st
bindsym $mod+m			exec --no-startup-id deadbeef
bindsym $mod+Ctrl+m		exec --no-startup-id spotify
bindsym Print                   exec --no-startup-id gnome-screenshot
bindsym $mod+Print		exec --no-startup-id gnome-screenshot -w
bindsym $mod+c	                exec --no-startup-id gnome-calculator
bindsym $mod+n	                exec --no-startup-id gnome-system-monitor
bindsym $mod+d                  exec dmenu_run -nb '#1c2023' -sf '#FFFFFF' -sb '#3a9fd3' -nf '#FFFFFF' -fn 'mononoki Nerd Font-10'

# kill focused window
bindsym $mod+q			kill
bindsym $mod+Shift+q		[con_id="__focused__" instance="^(?!dropdown_).*$"] kill

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focus workspace
bindsym $mod+Mod1+Right move workspace to output right
bindsym $mod+Mod1+Left move workspace to output left

# move focus window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# resize focus window
bindsym $mod+Ctrl+Right resize shrink width 5 px or 5 ppt
bindsym $mod+Ctrl+Up resize grow height 5 px or 5 ppt
bindsym $mod+Ctrl+Down resize shrink height 5 px or 5 ppt
bindsym $mod+Ctrl+Left resize grow width 5 px or 5 ppt

# toggle tiling / floating
bindsym $mod+space floating toggle

# split in direction
bindsym $mod+v split v
bindsym $mod+h split h

# layout fullscreen / gaps
bindsym $mod+f fullscreen toggle
bindsym $mod+KP_Add gaps inner current set 15; gaps outer current set 15
bindsym $mod+KP_Subtract gaps inner current set 0; gaps outer current set 0

# layout split / tabbed
bindsym $mod+s layout toggle split
bindsym $mod+Shift+s layout tabbed
bindsym $mod+Ctrl+s layout tabbed

# reload, restart, exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# i3wm
client.focused          #3a9fd3 #3a9fd3 #FFFFFF #3a9fd3 #3a9fd3
client.urgent		#c795ae #c795ae #FFFFFF #c795ae #c795ae

# i3blocks
bar {
	output HDMI-0
#	font pango:"mononoki Nerd Font" 10
	status_command i3blocks
	position top
	mode dock
	modifier None
	height 19
  colors {
	background #1c2023
	statusline #FFFFFF
	separator  #3a9fd3
	focused_workspace #FFFFFF #3a9fd3 #FFFFFF
	active_workspace #1c2023 #1c2023 #FFFFFF
	inactive_workspace #1c2023 #1c2023 #FFFFFF
	urgent_workspace #1c2023 #c795ae #FFFFFF
	}
}

bar {
	output HDMI-1
#	font pango:"mononoki Nerd Font" 10
	tray_output HDMI-1
	status_command i3blocks -c ~/.config/i3blocks/empty
	position top
	mode dock
	modifier None
	height 19
  colors {
	background #1c2023
	statusline #FFFFFF
	separator  #3a9fd3
	focused_workspace #FFFFFF #3a9fd3 #FFFFFF
	active_workspace #1c2023 #1c2023 #FFFFFF
	inactive_workspace #1c2023 #1c2023 #FFFFFF
	urgent_workspace #1c2023 #c795ae #FFFFFF
	}
}

# i3gaps
for_window [class="^.*"] border pixel 3
gaps inner 15
gaps outer 15

#workspace names
set $ws1 " 1 "
set $ws2 " 2 "
set $ws3 " 3 "
set $ws4 " 4 "
set $ws5 " 5 "
set $ws6 " 6 "
set $ws7 " 7 "
set $ws8 " 8 "

# workspace assign
#assign [class="claws-mail"] $ws1
#assign [class="spotify"] $ws1
#assign [class="Deadbeef"] $ws1
#assign [class="discord"] $ws2
#assign [class="obs"] $ws3
#assign [class="pavucontrol"] $ws3
#assign [class="Firefox-esr"] $ws4
#assign [class="Steam"] $ws5
#assign [class="Lutris"] $ws5
#assign [class="Code"] $ws6

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8

# move to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8

# move alternative
bindsym $mod+Ctrl+1 move container to workspace $ws1
bindsym $mod+Ctrl+2 move container to workspace $ws2
bindsym $mod+Ctrl+3 move container to workspace $ws3
bindsym $mod+Ctrl+4 move container to workspace $ws4
bindsym $mod+Ctrl+5 move container to workspace $ws5
bindsym $mod+Ctrl+6 move container to workspace $ws6
bindsym $mod+Ctrl+7 move container to workspace $ws7
bindsym $mod+Ctrl+8 move container to workspace $ws8

